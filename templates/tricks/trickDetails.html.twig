{% extends 'base.html.twig' %}

{% block body %}
    <header class="trick-details shadow">
        <img src="https://picsum.photos/1920/1080" alt="">
        <div class="container d-flex flex-column justify-content-center">
            <div class="text-center text-light">
                <h1 class="text-header">Trick title</h1>
            </div>
        </div>
        <div class="editTools">
            <i class="fas fa-2x fa-edit"></i>
            <i class="far fa-2x fa-trash-alt"></i>
        </div>
    </header>

    <main id="trickDetails">
        <section class="container tricks-images my-5">
            {% for i in 0..1 %}
                <a href="https://picsum.photos/1920/1080#{{ i }}" data-lightbox="image" class="image my-1 mx-1">
                    <img src="https://picsum.photos/1920/1080#{{ i }}" alt="" class="img-thumbnail">
                </a>
            {% endfor %}
            {% for i in 0..1 %}
                <a href="https://www.youtube.com/watch?v=NpEaa2P7qZI" data-lightbox="video" class="image my-1 mx-1">
                    <img src="https://picsum.photos/1920/1080#{{ i }}" alt="" class="img-thumbnail">
                </a>
            {% endfor %}
        </section>

        <section class="container text-justify my-5">
