{% extends 'base.html.twig' %}

{% block title %}{{ 'Sign up'|trans }}{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <main id="registrationForm" class="container d-flex flex-column justify-content-center">
        <div class="p-90 h-100vh d-flex justify-content-center">
            <div class="form-container col-lg-5 col-md-8 col-12 m-auto">
                <div class="d-flex justify-content-center">
                    <img src="{{ asset('img/site-logo.svg') }}" width="64px" alt="Site Logo">
                </div>
                <h1 class="text-center">{{ 'Register_Title'|trans }}</h1>

                {{ form_start(registrationForm) }}

                {{ form_row(registrationForm.firstName) }}
                {{ form_row(registrationForm.lastName) }}

                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.email) }}

                {{ form_row(registrationForm.plainPassword) }}

                <button type="submit" class="btn btn-lg btn-block btn-blue-trick mt-3 w-100">{{ 'Register'|trans }}</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </main>
{% endblock %}
